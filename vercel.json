{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "@next_public_api_url"
  },
  "github": {
    "enabled": true,
    "silent": true
  },
  "environments": {
    "production": {
      "env": {
        "NODE_ENV": "production",
        "NEXT_PUBLIC_API_URL": "@next_public_api_url_prod"
      }
    },
    "preview": {
      "env": {
        "NODE_ENV": "development",
        "NEXT_PUBLIC_API_URL": "@next_public_api_url_staging"
      }
    }
  }
}

